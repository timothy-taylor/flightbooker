<div class="flex flex-col rounded-lg md:flex-row">
  <%= render 'flights/search' %>
  <div class="p-2 bg-white md:w-4/5 rounded-3xl">
    <div class="px-6">
      <h2 class="py-2">Flight <%= @booking.flight_id %></h3>
      <h3>Passengers:</h3>
      <ul class="list-disc list-inside">
        <% flight = Flight.find(@booking.flight_id) %>
        <% @booking.passengers.each do |passenger| %>
          <li><%= passenger.name %></li>
        <% end %>
      </ul>
      <div class="py-2"></div>
      <h3>Flight:</h3> 
      <ul class="list-disc list-inside">
        <li><%= flight.departure_airport.code %> to <%= flight.arrival_airport.code %></li>
        <li><%= flight.fmt_time_display %></li>
        <li><%= flight.duration %> minutes</li>
      </ul>
      <div class="py-2"></div>
    </div>
  </div>
</div>
